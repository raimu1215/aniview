<div class="container">
      <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          　 <div class="col-auto">
              <p><%= image_tag @animation.get_image, size:'150x200' %></p>
          　 </div>
              <!--<アニメ名>-->
              <div class="col-auto">
                <h4><strong><%= @animation.anime_title %></strong></h4>
              </div>
              <!--<原作者>-->
              <div class="form-group">
                <h5><strong><%= @animation.original_author %></strong></h5>
              </div>
              <!--<放映日>-->
              <div class="form-group">
                <h5><strong><%= @animation.onair_date %></strong></h5>
              </div>
              
              <h2>新規投稿</h2>
              <%= form_with model: @review, url: reviews_path do |f| %>
                <h4>タイトル</h4>
                  <%= f.text_field :title %>
                <h4>本文</h4>
                  <%= f.text_area :body %>
                <%= f.submit '投稿' %>
              <% end %>
          </div>
      </div>
</div>